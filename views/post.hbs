{{#each post}}

<div class="container">
    {{> post-details}}
</div>

{{#if comments}}
<div class="comment-container toggle-container">
    {{#each comments}}
    {{> comment-details}}
    {{/each}}
</div>
{{/if}}

{{> comment-form user_id=../currentUserId}}

{{#if ../loggedIn}}
<div class="footer">
    <button data-postid="{{id}}" class="btn" id="footer-btn"> + Add Comment </button>
</div>
{{/if}}

{{/each}}

<script>
    document.title = "Tech Blog - Post";
</script>